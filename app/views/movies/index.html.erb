<h1>All Movies</h1>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th class="<%= 'hilite bg-warning' if @sort_by == 'title' %>">
        <%= link_to 'Movie Title', movies_path(:sort_by => 'title'), id: 'title_header' %>
      </th>
      <th class="<%= 'hilite bg-warning' if @sort_by == 'rating' %>">
        <%= link_to 'Rating', movies_path(:sort_by => 'rating') %>
      </th>
      <th class="<%= 'hilite bg-warning' if @sort_by == 'release_date' %>">
        <%= link_to 'Release Date', movies_path(:sort_by => 'release_date'), id: 'release_date_header' %>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date.strftime("%B %d, %Y") %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>